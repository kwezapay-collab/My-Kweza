{
  "name": "my-kweza-dashboard",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "android:doctor": "npx @bubblewrap/cli doctor",
    "android:update": "cd android && npx @bubblewrap/cli update --skipVersionUpgrade --manifest ./twa-manifest.json --directory .",
    "android:build": "cd android && npx @bubblewrap/cli build --skipSigning --manifest ./twa-manifest.json --directory .",
    "android:build:signed": "cd android && npx @bubblewrap/cli build --manifest ./twa-manifest.json --directory ."
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.18.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
